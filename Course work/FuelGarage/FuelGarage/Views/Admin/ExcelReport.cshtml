@model FuelGarage.Domain.ViewModels.Report

@{
    ViewData["Title"] = "ExcelReport";
    Layout = "_AdminLayout";
}

<h1>Excel отчет</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DownloadExcelReport" asp-controller="Admin" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Клиент
                <select name="ClientId" asp-items="ViewBag.Clients">
                    <option value="0" selected>Выберите пользователя</option>
                </select>
            </div>
            <div class="form-group">
                Начальная дата
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group">
                Конечная дата
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Скачать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

