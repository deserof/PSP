@model IEnumerable<FuelGarage.Domain.ViewModels.AdminCustomerViewModel>

@{
    ViewData["Title"] = "ListCustomer";
    Layout = "_AdminLayout";
}

<h1>Заказчики</h1>

<p>
    <a asp-action="CreateCustomer">Создать заказчика</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Отчество
            </th>
            <th>
                Почта
            </th>
            <th>
                Телефон
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "EditCustomer", new { id = item.Id }) |
                    @*@Html.ActionLink("DetailsCustomer", "DetailsCustomer", new { /* id=item.PrimaryKey */ }) |*@
                    @Html.ActionLink("Удалить", "DeleteCustomer", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
