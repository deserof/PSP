@model FuelGarage.Domain.ViewModels.AdminOrderViewModel

@{
    ViewData["Title"] = "Подробнее";
    Layout = "_AdminLayout";
}

<h1>Подробнее</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя заказчика
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerFirstName)
        </dd>
        <dt class="col-sm-2">
            Фамилия заказчика
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerLastName)
        </dd>
        <dt class="col-sm-2">
            Отчество заказчика
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerMiddleName)
        </dd>
        <dt class = "col-sm-2">
            Телефон заказчика
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerPhone)
        </dd>
        <dt class="col-sm-2">
            Имя водителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverFirstName)
        </dd>
        <dt class="col-sm-2">
            Фамилия водителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverLastName)
        </dd>
        <dt class="col-sm-2">
            Отчество водителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverMiddleName)
        </dd>
        <dt class="col-sm-2">
            Телефон водителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverPhone)
        </dd>
        <dt class="col-sm-2">
            Топливо
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelBrand)
        </dd>
        <dt class="col-sm-2">
            Количество
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelQuantity)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Адрес доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderAddress)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDescription)
        </dd>
        <dt class="col-sm-2">
            Дата оформления
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationTime)
        </dd>
        <dt class="col-sm-2">
            Дата доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeadTime)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Редактировать", "EditOrder", new {  id = Model.Id }) |
    <a asp-action="ListOrder">Назад</a>
</div>
