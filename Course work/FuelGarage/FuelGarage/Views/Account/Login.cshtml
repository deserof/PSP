@model FuelGarage.Domain.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AccountLayout";
}

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/images/accountFuel.jpg"
                                 alt="login form"
                                 class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Login">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Перевозки топлива</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Авторизация</h5>

                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="Email" type="email" id="email" class="form-control form-control-lg" />
                                        <label class="form-label" for="email">Электронная почта</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" />
                                        <label class="form-label" for="password">Пароль</label>
                                    </div>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit" value="Login">Войти</button>
                                    </div>

                                    @*<a class="small text-muted" href="#!">Забыли пароль?</a>*@
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">Нет аккаунта? <a asp-action="Register" style="color: #393f81;">Создайте аккаунт здесь</a></p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
