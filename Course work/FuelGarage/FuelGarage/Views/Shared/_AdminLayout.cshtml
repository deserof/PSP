<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FuelGarage</title>
    @*<link rel="stylesheet" href="~/css/reset.css">
        <link rel="stylesheet" href="~/css/dark-theme.css">
        <link rel="stylesheet" href="~/css/light-theme.css" id="theme-link">
        <link rel="stylesheet" href="~/css/all.css">*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    @*<div class="preloader">
            <div class="preloader-5"></div>
        </div>*@
    @*<div class="wrapper">*@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @*<div class="header__inner">*@
                @*<div class="header__title"></div>*@
                <a class="navbar-brand header__title-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="header__logo-block"></div>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 header__list">
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Admin" asp-action="Index">Админ панель</a>
                        </li>
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Admin" asp-action="ListOrder">Заказы</a>
                        </li>
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Admin" asp-action="ListFuel">Топливо</a>
                        </li>
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Admin" asp-action="ListCustomer">Заказчики</a>
                        </li>
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Admin" asp-action="ListDriver">Водители</a>
                        </li>
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Admin" asp-action="ListVehicle">Машины</a>
                        </li>
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Admin" asp-action="ExcelReport">Отчет</a>
                        </li>
                        <li class="nav-item header__item">
                            <a class="nav-link text-dark header__link" asp-area=""
                               asp-controller="Home" asp-action="AboutUs">О нас</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav navbar-right">
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="userEmail"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a>
                        </li>
                    </ul>
                </div>

                @*</div>*@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="main__inner">
                @RenderBody()
            </div>
        </main>
    </div>
    <footer class="border-top footer text-muted footer">
        <div class="container">
            <div class="footer__inner">
                <div class="footer__block-address">
                    <div class="footer__sub-address"></div>
                    <div class="footer__address">&copy; 2021 - FuelGarage </div>
                </div>
                <div class="">
                    <div class="theme-btn" id="theme-btn"><i class="fas fa-cog"></i></div>
                    <a class="footer__link" asp-area="" asp-controller="Home" asp-action="AboutUs">
                        О
                        нас
                    </a>
                </div>
            </div>
        </div>
    </footer>
    @*</div>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>