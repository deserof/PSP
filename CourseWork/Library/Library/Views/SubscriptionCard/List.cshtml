@model IEnumerable<Library.Models.SubscriptionCardViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>Абонемент</h1>

<p>
    <a asp-action="Create">Добавить абонемент</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Читатель
            </th>
            <th>
                Книга
            </th>
            <th>
                Дата выдачи
            </th>
            <th>
                Дата возврата
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LMF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookNameAndBookAuthor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
