@model Library.Entities.CatalogCard

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Каталожную карточку</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QantityOfBook" class="control-label">Количество книг</label>
                <input asp-for="QantityOfBook" class="form-control" />
                <span asp-validation-for="QantityOfBook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Книга</label>
                <select asp-for="BookId" asp-items="ViewBag.Book"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
